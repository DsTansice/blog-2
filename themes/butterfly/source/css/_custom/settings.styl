#settings

  position fixed
  bottom 70px
  right 30px
  width 410px
  max-width 80%
  z-index 8998
  background-color var(--km-float-win-bg)
  color var(--km-globle-font)
  border-radius 15px
  animation rotateX 0.5s ease
  display none

  &.close
    animation win-exit 0.5s ease forwards

  .header
    border-bottom #66ccff80 solid

    p
      display inline-block
      margin-left 10px
      margin-top 10px
      margin-bottom 0
      font-weight bold

    .close
      position absolute
      display inline-block
      font-size 22px
      right 10px
      top 10px
      color var(--km-globle-font)
      transition all 0.5s

      &:hover
        color deepskyblue
        transform rotate(90deg)

  #setting-button
    text-align center

    button
      display inline-block
      margin 8px
      width w = 35px
      height w
      border-radius 8px
      background-color var(--btn-bg)
      color var(--btn-color)
      text-align center
      font-size 16px
      line-height w
      transition all .3s

      &:hover
        background-color: var(--btn-hover-color)

    @media screen and (max-width 900px)
      #hide-aside-btn
        display none

  .info
    div
      border-top #66ccff80 solid

      p
        width 50%
        margin 0
        display inline-block
        text-align center
        vertical-align middle

      @media screen and (max-width 200px)
        display none

  .helper
    text-align center
    border-top #66ccff80 solid

    & > p
      display inline-block
      margin-bottom 0

    & > a
      display inline-block
      margin-top 0
      margin-bottom 10px

    @media screen and (max-width 210px)
      display none

  .descr
    border-top #66ccff80 solid

    p
      display block

    #setting-post-title
      font-weight bold
      margin-left 10px
      margin-right 10px
      margin-bottom 0

    #setting-post-descr
      text-align center
      margin-left 20px
      margin-right 20px
      margin-top 0

#quit-mask
  position fixed
  background rgba(23, 23, 23, 0.5)
  display none
  top 0
  left 0
  z-index 7000
  width 100%
  height 100%
[data-theme="dark"]
  // 深色模式右侧标签
  #aside-content
    .card-tag-cloud a
      color rgb(132, 133, 135) !important

#aside-content

  //相关推荐
  .card-widget.card-recent-post
  .aside-list
    img
      border-radius 8px
      &:hover
        transform unset !important

  // 右侧标签
  .card-tag-cloud
    a
      font-weight 600
      border-radius 8px

      &:hover
        background-color var(--km-link-bg)
        color white !important

  // 文章页目录
  #card-toc
    .toc-content
      .toc-link
        border-radius 10px

        &:hover
          background var(--km-toc-hover)
          color var(--font-color)

        &.active
          color var(--km-toc-active-font)
          border-radius 10px
          background var(--km-toc-active)

    .item-headline
      .toc-percentage
        display none

  // 作者信息背景图片
  .card-widget.card-info
    background-image url("https://image.kmar.top/indexBg/side.png!/fw/800")
    background-repeat no-repeat
    background-attachment inherit
    background-size 100%
    .avatar-img
      margin-top 20px
      img
        transition all 0.5s
        &:hover
          transform unset
          opacity 0
      &:hover
        & + .author-info__name
          opacity 0
    .author-info__name
      transition all 0.5s

#sidebar-menus
  .menus_items
    .fa-chevron-down:before
      line-height 30px
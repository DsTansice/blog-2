.float-win

  position fixed
  top 70px
  width 300px
  z-index 9997
  background-color whitesmoke
  border-radius 15px
  box-shadow 3px 4px 5px black
  transition all 1s
  animation win-entrance 1.3s forwards

  & > .text
    width 250px
    text-align center
    margin-left 25px
    margin-bottom 0
    margin-top 26px
    word-break keep-all
    word-wrap break-word

  & > .exit
    float right
    width 30px
    height 30px

  & > .select
    position relative
    text-align right
    margin-bottom 10px
    height 30px
    & > .descr
      position relative
      margin-top 0
      margin-right 6px
      display inline-block
      height 30px
      overflow hidden
      & > p
        left 100px
        opacity 0
        position relative
        margin 0
        height 30px
        z-index 9998
        transition all 1s
    & > .action
      display inline-block
      position relative
      float right
      z-index 9999
      height 30px
      margin-right 10px
      background-color var(--km-button-dark-bg)
      box-shadow 1px 1px 2px black
      padding 10px
      border-radius 7px
      transition all 0.5s
      & > .text
        display inline
        position relative
        bottom 4px
        font-weight bold
        margin-left 2px
      & > i
        position relative
        bottom 4px
      &:hover
        background-color var(--km-button-dark-hover)
        & + .descr > p
          left 0
          opacity 1

.float-win.delete
  animation win-exit 1.3s forwards

@media screen and (max-width: 550px) and (min-width: 250px)
  .float-win
    width 200px

@media screen and (max-width: 250px)
  .float-win
    width calc(50%)
    & > .text
      width calc(50%)
    & > .select > .descr
      color transparent

@keyframes win-entrance
  from
    right -310px
    opacity 0.5
  to
    right 20px
    opacity 1

@keyframes win-exit
  from
    right 20px
  to
    right -310px
    opacity 0.3
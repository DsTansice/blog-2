/* 全局默认鼠标指针 */
body,
html, li:hover::before
  cursor url('https://image.kmar.top/mouse/normal.cur') , auto !important

/* 选择链接、标签、图片、按钮时的鼠标指针 */
.tk-icon[data-v-2619081a] svg:hover, .OwO .OwO-logo:hover,
a:hover, a#site-name:hover, img, button:hover, div#scroll-down:hover, i:hover
  cursor url('https://image.kmar.top/mouse/link.cur') , auto !important

/* 选中输入框、文本时的鼠标指针 */
h1:hover, h2:hover, h3:hover, h4:hover, h5:hover, h6:hover,
#article-container ol li:hover, #article-container ul li:hover,
#article-container pre code:hover, #article-container p:hover,
.tk-input[data-v-619b4c52]:hover, input:hover,
.article-sort-item-time time:hover
  cursor url('https://image.kmar.top/mouse/texto.cur') , auto

el-button tk-send el-button--primary el-button--small is-disabled
  cursor url('https://image.kmar.top/mouse/No Disponible.cur') , auto !important

/* 悬停页脚链接标签（例如页脚徽标）时的鼠标指针 */
#footer-wrap a:hover, #live2d:hover
  cursor url('https://image.kmar.top/mouse/link.cur') , auto

/* 悬停页码时的鼠标指针 */
#pagination
  .page-number
    &:hover
      cursor url('https://image.kmar.top/mouse/Alternative2.cur') , auto

/* 悬停菜单栏时的鼠标指针 */
#nav
  .site-page
    &:hover
      cursor url('https://image.kmar.top/mouse/Alternative2.cur') , auto

/* 看板娘右侧按钮 */
#waifu-tool
  .fa-lg
    &:hover
      cursor url('https://image.kmar.top/mouse/link.cur') , auto

/* 副标题 */
#page-header
  #site-subtitle
    &:hover
      cursor url('https://image.kmar.top/mouse/texto.cur') , auto

#recent-posts>.recent-post-item>.recent-post-info>.content
  &:hover
    cursor url('https://image.kmar.top/mouse/texto.cur') , auto
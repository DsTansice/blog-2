body:not(.read-mode) #article-container
  h2
    font-size 1.7rem
    padding-left 20px

    &:before
      content '\f105'
      font-size 2.3rem
      margin-left -1.5rem
      margin-top -0.69rem

  h3
    font-size 1.5rem

    &:before
      content '\f101'
      margin-left -1.75rem
      margin-top -0.41rem
      font-size 1.7rem

  h4
    font-size 1.3rem

    &:before
      margin-left -1.5rem
      margin-top 0.05rem

  h5
    font-size 1.1rem

    &:before
      margin-left -1.2rem

  h6
    font-size 0.9rem

    &:before
      margin-left -1.2rem
      margin-top 0.1rem

  h2, h3, h4, h5, h6
    &:hover
      color #49b1f5

@media screen and (min-width: 900px)
  body:not(.read-mode) #article-container
    h3, h4, h5, h6
      &:hover
        margin-left 0.4rem
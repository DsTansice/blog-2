mixin addButton(value)
  if (value.code)
    button.fixedcard-activebtn(onclick=`RemoveFixedCardWidget(),${value.code}`)
      i(class=value.icon)
  else
    button.fixedcard-activebtn(onclick=`FixedCardWidget("` + value.type + `","` + value.name + `","` + value.index + `")`)
      i(class=value.icon)

#fixedcard-dashboard
  if is_post()
    each poitem in theme.fixed_card_widget.post
      +addButton(poitem)
  else
    each paitem in theme.fixed_card_widget.page
      +addButton(paitem)
  .fixedcard-user-avatar.fixedcard-activebtn(onclick="RemoveFixedCardWidget()")
    img.fixedcard-user-avatar-img(src=url_for(theme.avatar.img) title=config.author)